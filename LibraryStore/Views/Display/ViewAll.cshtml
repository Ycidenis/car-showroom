@model List<LibraryStore.Models.Book>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Бібліотека книг";
}

<div style="margin-bottom: 5px; padding: 5px">
    <button onclick="window.location.href = '/edit';">Додати нову книгу</button>
</div>
@foreach (var book in Model)
{
    <div style="border-style: solid; border-width: 1px; padding: 5px; text-align: center; max-width: 700px">
        <img src="@book.ImageUrl" style="max-width: 400px;" alt="Книга @book.Name" />
        <p>Код видання: @book.PublishCode | Код автора: @book.AuthorCode | Назва: @book.Name | Рік видання: @book.PublishYear | Короткий опис: @book.ShortDescription</p>
        <button onclick="window.location.href = '/edit/@book.Id';">Редагувати</button>
    </div>
}