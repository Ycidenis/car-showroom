@model List<EmployeeProject.Models.Worker>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Список працівників";
}

<div style="margin-bottom: 5px; padding: 5px">
    <button onclick="window.location.href = '/edit';">Додати нового працівника</button>
</div>

<form style="margin-bottom: 5px; padding: 5px" method="get">
    <p>Year of experience:</p>
    <input type="number" name="yearsOfExperience"/>
    <input type="submit" value="Search for selected year of experience"/>
</form>

@foreach (var worker in Model)
{
    <div style="border-style: solid; border-width: 1px; padding: 5px; text-align: center; max-width: 700px">
        <p>ФІО: @worker.LastName @worker.Initials | Посада: @worker.Position | Рік вступу на роботу: @worker.YearOfWorkBeginning | Зарплатня: @worker.Salary</p>
        <button onclick="window.location.href = '/edit/@worker.Id';">Редагувати</button>
    </div>
}